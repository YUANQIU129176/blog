<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>详情</title>
</head>

<body>
    <h4>
        <%= value.title %>
    </h4>
    <p>
        <%= value.name %> 发表于
            <%= value.moment %> 评论数为：
                <%=value.comments%>条 详情：
                    <%=value.pv%>
    </p>
    <div>
        <%= value.content %>
    </div>

    <!-- 评论页 -->
    <div class="comment">
        <% if(user){ %>
            <form action="/comment/add/<%= value.id %>" method="POST">
                <textarea rows=5 placeholder="说点什么..." name="content"></textarea>
                <button type="submit">确认</button>
            </form>
            <% } else { %>
                <a href="/login">先登录，再评论</a>
                <% }  %>
    </div>
    <ul>
        <% comments.forEach(function(value){  %>
            <li>
                <%= value.name %>:
                    <%= value.content %>
            </li>
            <%  }) %>
    </ul>
</body>

</html>